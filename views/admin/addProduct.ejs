<%- include('../layouts/header.ejs') -%>
<%- include('../layouts/header.ejs') -%>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />

    <title>Shoe Mart</title>
  </head>
  <body>
    <!-- SIDEBAR -->
    <section id="sidebar">
      <a href="#" class="brand">
        <i class="bx bxs-smile"></i>
        <span class="text">AdminHub</span>
      </a>
      <ul class="side-menu top">
        <li>
          <a href="/admin/home">
            <i class="bx bxs-dashboard"></i>
            <span class="text">Dashboard</span>
          </a>
        </li>
        <li  >
          <a href="/admin/user">
            <!-- <i class="bx bxs-shopping-bag-alt"></i> -->
            <span class="material-symbols-outlined"> group </span>
            <span class="text">Users</span>
          </a>
        </li>
        <li>
          <a href="/admin/categories">
            <i class="bx bxs-doughnut-chart"></i>
            <span class="text">Categories</span>
          </a>
        </li>
        <li class="active">
          <a href="/admin/products">
            <i class="bx bxs-message-dots"></i>
            <span class="text">Products</span>
          </a>
        </li>
        <li>
          <a href="/admin/orders">
            <i class="bx bxs-group"></i>
            <span class="text">Order</span>
          </a>
        </li>
        <li>
          <a href="/admin/banners">
            <i class="bx bxs-group"></i>
            <span class="text">Banners</span>
          </a>
        </li>
        <li>
          <a href="/admin/CouponManagement" >
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Coupon</span>
          </a>
        </li>
      </ul>
      <ul class="side-menu">
        
        <li>
          <a href="/admin/logout" class="logout">
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Logout</span>
          </a>
        </li>
      </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form >
          <div class="form-input"> 
            <input type="search" placeholder="Search..."  name="search" />
            <button type="submit" value="search" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/people.png" />
        </a>
      </nav>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Product</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Product</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="#">Add Product</a>
              </li>
            </ul>
          </div>
          
        </div>

        <div class="divContent">
          <div class="container-fluid">
            <div class="col-lg-8 my-auto">
              <form action="" method="post" enctype="multipart/form-data"  >
               
                    <label for="name" class="form-label">Name : </label>
                    <input type="text" placeholder="Name"  name="name" class="form-control" required />
                 
                 
                    <label for="description">description</label>
                    <input type="text" placeholder="enter description" name="description" class="form-control" required >
                 
                 
                    <label for="price">Price</label>
                   <input type="number" placeholder="price" name="price" class="form-control" required >
                 
                  <br>
                 
                    <input type="file" name="image" placeholder="pick the image" accept="image/*" class="form-control" required multiple >
                  </div>
                  <br>
                
                  <% allowedSizes.forEach((size)=>{ %>
                    <label >
                      <input  type="checkbox" name="size" value="<%= size %>"><%= size %></option>
                    </label>
                    
                  <% }) %>
        
                
                  <br> <br>
                 
                  <% if(category.length > 0){ %>
                    <select name="category" >
                      <option>Category</option>
                     <% for(let i = 0;i < category.length;i++ ){
                      %>
                       
                        <option value="<%= category[i]._id %>"><%= category[i].Title %></option>
                      <%
                    } %>
                  </select>
                  <%
                  }else{
                    %>
                    <a href="">category not found</a>
                    <%
                  } %>
                 
                  <br><br>
                 
                   <label for="quantity">Quantity
                    <input type="number" name="quantity" class="form-control" required>
                   </label>
                   
                  
                  <br><br>
                  
                    <input type="radio" value="male" name="gender" required>
                    <label for="gender">Male</label>
                    <input type="radio" value="female" name="gender" required>
                    <label for="gender">Female</label>
                    <input type="radio" value="unisex" name="gender" required>
                    <label for="gender">Unisex</label>
                  
                  <br><br>
                  
                  <button type="submit" class="search-btn form_data btn btn-success mb-3">
                    submit
                  </button>
               
              </form>
            </div>
          </div>
        </div>

      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <section id="content">
      
      
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/javascript/admin.js"></script>
  </body>
</html>