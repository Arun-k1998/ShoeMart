    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form >
          <div class="form-input"> 
            <input type="search" placeholder="Search..."  name="search" />
            <button type="submit" value="search" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/people.png" />
        </a>
      </nav>
      <!-- NAVBAR -->


      <main>
        <div class="head-title">
          <div class="left">
            <h1>Coupon</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Coupon</a>
              </li>
            </ul>
          </div>
          <a href="/admin/Coupon/add_coupon" class="btn-download">
            <span class="text">Coupon</span>
            <span class="material-symbols-outlined">
              add
              </span>
          </a>
        </div>

        <main>
          
  
          <div class="table-data">
            <div class="order">
              <div class="head">
                <h3>List</h3>
                <i class="bx bx-search"></i>
                <i class="bx bx-filter"></i>
              </div>
              <table id="example">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Coupon Code</th>
                    <th>Discount</th>
                    <th>Maximum Amount</th>
                    <th>Minimum Amount</th>
                    <th>expiryDate</th>
                    <th>Update</th>
                    <th>Delete</th>
                    
                  </tr>
                </thead>
                <tbody>
                  <% if(couponData.length > 0){
                    for(i = 0;i < couponData.length;i++){
                        %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= couponData[i].couponCode %></td>
                            <td><%= couponData[i].discount %>%</td>
                            <td><%= couponData[i].maximumAmount %></td>
                            <td><%= couponData[i].minimumAmount %></td>
                            <td><%= time[i] %></td>
                            <td><a href="/admin/coupon/updateCoupon?id=<%= couponData[i]._id %> "><span class="material-symbols-outlined">
                              update
                              </span></a></td>
                            <td><a href="/admin/coupon/deleteCoupon?id=<%= couponData[i]._id %>" onclick="return confirm('Are you want to delete <%= couponData[i].couponCode %>')"><span class="material-symbols-outlined">
                              delete
                              </span></a></td>
                           
                            <% }
                        }else{ %>
                    <tr>
                        <td>Category not found</td>
                    </tr>
                    <%
                } %>
            
                </tbody>
              </table>
            </div>
          </div>
      
  
        </main>
  