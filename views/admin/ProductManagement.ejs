        </li>
      </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form >
          <div class="form-input"> 
            <input type="search" placeholder="Search..."  name="search" />
            <button type="submit" value="search" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/people.png" />
        </a>
      </nav>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Product</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Product</a>
              </li>
             
            </ul>
          </div>
          <a href="/admin/products/addProduct" class="btn-download">
            <span class="text">Product</span>
            <span class="material-symbols-outlined">
              add
              </span>
          </a>
        </div>

        <div class="table-data">
          <div class="order">
            <div class="head">
              <h3>Recent Orders</h3>
              <i class="bx bx-search"></i>
              <i class="bx bx-filter"></i>
            </div>
            <table id="productdata">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Product</th>
                  <th>Price</th>
                  <th>image</th>
                  <th>Category</th>
                  <th>size</th>
                  <th>quantity</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% if(product.length > 0){
                  for(i = 0;i < product.length;i++){
                      %>
                      <tr>
                          <td><%= i+1 %></td>
                          <td><%= product[i].name %></td>
                          <td><%= product[i].price %></td>
                          <td> <image src="<%= product[i].image[0] %>"> </td>
                          <td><%= product[i].category.Title %></td>
                          <td><%= product[i].sizes %></td>
                          <td><%= product[i].quantity %></td>
                          <td><a href="/admin/products/updateProduct?id=<%=product[i]._id %> "><span class="material-symbols-outlined">
                            update
                            </span></a></td>
                           
                          <td><a href="/admin/products/deleteProduct?id=<%= product[i]._id %>" onclick="return confirm('Are you want to delete <%=product[i].name %>')"><span class="material-symbols-outlined">
                            delete
                            </span></a></td>
                            <!-- <td><button class="deleteConfirm" onclick="deleteConfirm()">delete</button></td>    -->

                          <% }
                      }else{ %>
                  <tr>
                      <td>product not found</td>
                  </tr>
                  <%
              } %>
          
              </tbody>
            </table>
          </div>
        </div>
    

      </main>
      <!-- MAIN -->
    </section>
