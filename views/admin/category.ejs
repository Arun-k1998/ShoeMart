<%- include('../layouts/header.ejs') -%>

<%- include('../layouts/header.ejs') -%>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <title>Shoe Mart</title>
  </head>
  <body>
    <!-- SIDEBAR -->
    <section id="sidebar">
      <a href="#" class="brand">
        <i class="bx bxs-smile"></i>
        <span class="text">AdminHub</span>
      </a>
      <ul class="side-menu top">
        <li>
          <a href="/admin/home">
            <i class="bx bxs-dashboard"></i>
            <span class="text">Dashboard</span>
          </a>
        </li>
        <li  >
          <a href="/admin/user">
            <!-- <i class="bx bxs-shopping-bag-alt"></i> -->
            <span class="material-symbols-outlined"> group </span>
            <span class="text">Users</span>
          </a>
        </li>
        <li class="active">
          <a href="/admin/categories">
            <i class="bx bxs-doughnut-chart"></i>
            <span class="text">Categories</span>
          </a>
        </li>
        <li >
          <a href="/admin/products">
            <i class="bx bxs-message-dots"></i>
            <span class="text">Products</span>
          </a>
        </li>
        <li>
          <a href="/admin/orders">
            <i class="bx bxs-group"></i>
            <span class="text">Order</span>
          </a>
        </li>
        <li>
          <a href="/admin/banners">
            <i class="bx bxs-group"></i>
            <span class="text">Banners</span>
          </a>
        </li>
        <li>
          <a href="/admin/CouponManagement" >
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Coupon</span>
          </a>
        </li>
      </ul>
      <ul class="side-menu">
       
        <li>
          <a href="/admin/logout" class="logout">
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Logout</span>
          </a>
        </li>
      </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form >
          <div class="form-input"> 
            <input type="search" placeholder="Search..."  name="search" />
            <button type="submit" value="search" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/people.png" />
        </a>
      </nav>
      <!-- NAVBAR -->

      <main>
        <div class="head-title">
          <div class="left">
            <h1>Categories</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Category</a>
              </li>
             
            </ul>
          </div>
          <a href="/admin/add_Category" class="btn-download">
            <span class="text">category</span>
            <span class="material-symbols-outlined">
              add
              </span>
          </a>
        </div>

        <div class="table-data">
          <div class="order">
            <div class="head">
              <h3>List</h3>
              <i class="bx bx-search"></i>
              <i class="bx bx-filter"></i>
            </div>
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Image</th>
                  <th>Update</th>
                  <th>Delete</th>
                  
                </tr>
              </thead>
              <tbody>
                <% if(categories.length > 0){
                  for(i = 0;i < categories.length;i++){
                      %>
                      <tr>
                          <td><%= i+1 %></td>
                          <td><%= categories[i].Title %></td>
                          <td><img src="/images/adminImages/<%= categories[i].image %>" alt=""></td>
                          <td><a href="/admin/updateCategory?id=<%= categories[i]._id %> "><span class="material-symbols-outlined">
                            update
                            </span></a></td>
                          <td><a href="/admin/deleteCategory?id=<%= categories[i]._id %>"><span class="material-symbols-outlined">
                            delete
                            </span></a></td>
          
                          <% }
                      }else{ %>
                  <tr>
                      <td>Category not found</td>
                  </tr>
                  <%
              } %>
          
              </tbody>
            </table>
          </div>
        </div>
    

      </main>


    </section>
    <!-- CONTENT -->
   
    <script src="/javascript/admin.js"></script>
  </body>
</html>


