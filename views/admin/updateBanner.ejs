<%- include('../layouts/header.ejs') -%>
<%- include('../layouts/header.ejs') -%>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <title>Shoe Mart</title>
  </head>
  <body>
    <!-- SIDEBAR -->
    <section id="sidebar">
      <a href="#" class="brand">
        <i class="bx bxs-smile"></i>
        <span class="text">AdminHub</span>
      </a>
      <ul class="side-menu top">
        <li>
          <a href="/admin/home">
            <i class="bx bxs-dashboard"></i>
            <span class="text">Dashboard</span>
          </a>
        </li>
        <li  >
          <a href="/admin/user">
            <!-- <i class="bx bxs-shopping-bag-alt"></i> -->
            <span class="material-symbols-outlined"> group </span>
            <span class="text">Users</span>
          </a>
        </li>
        <li>
          <a href="/admin/categories">
            <i class="bx bxs-doughnut-chart"></i>
            <span class="text">Categories</span>
          </a>
        </li>
        <li >
          <a href="/admin/products">
            <i class="bx bxs-message-dots"></i>
            <span class="text">Products</span>
          </a>
        </li>
        <li>
          <a href="/admin/orders">
            <i class="bx bxs-group"></i>
            <span class="text">Order</span>
          </a>
        </li>
        <li class="active">
          <a href="/admin/banners">
            <i class="bx bxs-group"></i>
            <span class="text">Banners</span>
          </a>
        </li>
        <li>
          <a href="/admin/CouponManagement" >
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Coupon</span>
          </a>
        </li>
      </ul>
      <ul class="side-menu">
        
        <li>
          <a href="/admin/logout" class="logout">
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Logout</span>
          </a>
        </li>
      </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form >
          <div class="form-input"> 
            <input type="search" placeholder="Search..."  name="search" />
            <button type="submit" value="search" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/people.png" />
        </a>
      </nav>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Banner</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Banner</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="#">Update Banner</a>
              </li>
            </ul>
          </div>
         
        </div>
        <section id="content">
            <form action="" method="post" enctype="multipart/form-data" class="col-lg-6 bg-light p-4" >
              <div class="form-input"> 
                <label for="name" class="form-label">Name : </label>
                <input type="text" placeholder="<%= banner.title %>"  name="name" value="<%= banner.title %>" class="form-control" required />
                <br>
                <label for="description" class="form-label">Banner</label>
                <% for(let i =0;i < banner.image.length;i++){ %>
                  <img src="/images/adminImages/<%= banner.image[i] %>" id="imgView" alt="" style="width:50% ;height : auto">
                
                  <a href="/admin/delete-banner-image?id=<%= banner.image[i] %>&bId=<%= banner._id %>" onclick="return confirm('Do you want to delete the image')">
                    <span class="material-symbols-outlined"style='width:1rem'>
                      close
                      </span> 
                  </a>
                <% } %>
                 
                <br><br>
                <input type="file" placeholder="select Banner" name="image" value="<%= banner.image[0] %>" onchange="imageChange()" class="form-control" multiple  >
                <br>
                <label for="price" class="form-label">URL</label>
                <input type="text" placeholder="URL" name="url" value="<%= banner.url %>" class="form-control" required >
                <br>
                <label for="price" class="form-label">Description</label>
                <input type="text" placeholder="description" name="description" value="<%= banner.description %>" class="form-control" required >
                <br>
                <input type="hidden" name="id" value="<%= banner._id %>" >
                <input type="submit" value="submit" class="form-control btn btn-success">


        <script src="/javascript/admin.js"></script>
        <script>
          function imageChange(event){
            document.getElementById("imgView").src = URL.createObjectURL('event.target.files[0]')
          }
        </script>
    </body>
  </html>
  